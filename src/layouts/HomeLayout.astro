---

<ClientRouter />
<Layout title="SWIFI - home" class="min-h-full grid grid-cols-[auto_1fr] grid-rows-[auto_1fr] grid-flow-col">
  <nav class="border-r border-b border-gray-300 flex items-center px-4">
    <p class="text-lg font-bold">Swifi</p>
  </nav>
  <aside class="border-r border-gray-300 py-3 px-2">
    <section>
      <p></p>
      <ul>
        {items.map((item, i) => {
          const id = item.name.toLowerCase().replace(/\s+/g, '-');
          return (
            <>
              <li class={`rounded-md cursor-pointer text-neutral-600 ${active === id ? 'bg-neutral-100' : 'hover:bg-neutral-100 hover:opacity-100 opacity-80'}`}>
                <a class="px-2 py-1 flex gap-3" href={`/home/${id}`}>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 stroke-2" set:html={item.icon}></svg>
                  {item.name}
                  {item.badge && <Badge variant="outline">{item.badge}</Badge>}
                </a>
              </li>
              {(i === 6 || i === 2) && <Separator class="my-2 bg-neutral-300" />}
            </>
          )
        })}
      </ul>
    </section>
  </aside>
  <nav class="w-full h-12 border-b border-gray-300 flex justify-between items-center p-2">
    <SearchBar client:load />
    <Account client:load/>
  </nav>
  <main class="bg-gray-100 p-4">
    <slot />
  </main>
</Layout>
