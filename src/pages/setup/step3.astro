---
export const prerender = false;

import AuthLayout from "../../layouts/AuthLayout.astro";
import EncryptionAuthentication from "./EncryptionAuthentication.svelte";
---

<AuthLayout class="text-center">
    <h1 class="font-bold text-lg">Let's set up encryption</h1>
